@model EntityLayer.Concrete.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCategory</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h1>Yeni Kategori Ekleme Sayfası</h1>
        <br />
        @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Kategori Adı")
                @Html.TextBoxFor(x => x.CatagoryName) 
                @Html.ValidationMessageFor(x => x.CatagoryName) 
                <br /> <br />
                @Html.Label("Açıklamayı yazınız")
                @Html.TextBoxFor(x => x.CatagoryDescriptions) 
                @Html.ValidationMessageFor(x => x.CatagoryDescriptions) 
                <br /> <br />
                <button class="btn btn-primary">Kaydet</button>
            </div>
        }




