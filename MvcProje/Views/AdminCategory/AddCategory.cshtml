@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CatagoryName, new {@class="form-control"})
        @Html.ValidationMessageFor(x => x.CatagoryName)
        <br /> <br />
        @Html.Label("Açıklamayı yazınız")
        @Html.TextAreaFor(x => x.CatagoryDescriptions, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CatagoryDescriptions)
        <br /> <br />
        <button class="btn btn-primary">Kaydet</button>
    </div>
}

