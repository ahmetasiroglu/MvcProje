@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="text-align:center">İstatistik Sayfası</h2>
<hr>
<br />
<br />

<section class="container mt-4">
    <div class="row justify-content-center">
        <!-- Üstteki 3 kutu -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary" style="height: 100%; ">
                <div class="card-header">İSTATİSTİK</div>
                <div class="card-body">
                    <h5 class="card-title">Toplam Kategori Sayısı</h5>
                    <br />
                    <h5 class="card-text"> @ViewBag.CategoryCount</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary" style="height: 100%; ">
                <div class="card-header">İSTATİSTİK</div>
                <div class="card-body">
                    <h5 class="card-title">"Yazılım" kategorisine ait başlık sayısı</h5>
                    <br />
                    <h5 class="card-text"> @ViewBag.Heading</h5>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-warning" style="height: 100%; ">
                <div class="card-header">İSTATİSTİK</div>
                <div class="card-body">
                    <h5 class="card-title">Yazarların İsimlerinde "a" Harfi Bulunanlar</h5>
                    <br />
                    <h5 class="card-text"> @ViewBag.Writer</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Alttaki 2 kutu -->
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-fuchsia" style="height: 100%; ">
                <div class="card-header">İSTATİSTİK</div>
                <div class="card-body">
                    <h5 class="card-title">En Fazla Başlığı Olan Kategori Adı</h5>
                    <br />
                    <h5 class="card-text"> @ViewBag.HeadingMax</h5>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card text-white bg-primary" style="height: 100%; ">
                <div class="card-header">İSTATİSTİK</div>
                <div class="card-body">
                    <h5 class="card-title">Kategoriler Tablosunda T/F Farkı </h5>
                    <br />
                    <h5 class="card-text"> @ViewBag.StatusFark</h5>
                </div>
            </div>
        </div>
    </div>
</section>